<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
	<!-- 应用名称 -->
	<property name="APP_NAME" value="wechat-api" />
	<!--日志文件的保存路径,首先查找系统属性-Dlog.dir,如果存在就使用其；否则，在当前目录下创建名为logs目录做日志存放的目录 -->
	<property name="LOG_HOME" value="logs" />
	<!-- 日志输出格式 -->
	<property name="ENCODER_PATTERN"
		value="%d{yyyy-MM-dd  HH:mm:ss.SSS} %-5level %logger{80} - %msg%n" />
	<contextName>${APP_NAME}</contextName>

	<!-- 控制台日志：输出全部日志到控制台 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>${ENCODER_PATTERN}</Pattern>
		</encoder>
	</appender>

	<!-- 文件日志：输出全部日志到文件 -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/${APP_NAME}.%d{yyyy-MM-dd}.log
			</fileNamePattern>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${ENCODER_PATTERN}</pattern>
		</encoder>
	</appender>

	<!-- 错误日志：用于将错误日志输出到独立文件 -->
	<appender name="ERROR_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/${APP_NAME}-error.%d{yyyy-MM-dd}.log
			</fileNamePattern>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${ENCODER_PATTERN}</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
	</appender>
	<logger name="java.sql.Connection">
		<level value="ALL" />
	</logger>
	<logger name="java.sql.Statement">
		<level value="ALL" />
	</logger>
	<logger name="java.sql.PreparedStatement">
		<level value="ALL" />
	</logger>
	<logger name="java.sql">
		<level value="ALL" />
	</logger>

	<logger name="com.mujipassport.wechat.api">
		<level value="ALL" />
	</logger>
	<logger name="org.hibernate.sql">
		<level value="ALL" />
	</logger>
	<logger name="org.hibernate.type">
		<level value="ALL" />
	</logger>
	<logger name="org.apache.commons.dbcp">
		<level value="ALL" />
	</logger>

	<root>
		<level value="info" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>